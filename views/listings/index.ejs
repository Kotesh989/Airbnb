<% layout("/layouts/boilerplate") -%>

    <body>
        <h3>All Listings</h3>
        <br>
        <!-- <form action="/listings/new" method="get">
        <button>new Post</button>
    </form> -->
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
            <%for(let list of allListings){%>
                <a href="/listings/<%=list._id%>" class="listing-link">
                <div class="card col" style="width: 18rem;">
                      <div class="card-img-overlay"></div>
                    <img src="<%= list.image.url%>" class="card-img-top" alt="Listing-image" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text"><b><%= list.title %>&nbsp;,<%=list.location %></b><br>
                        <p>&#8377;<%=list.price.toLocaleString("en-IN") %></p>
                    </div>
                </div>
                </a>
                <%}%>
        </div>


    </body>