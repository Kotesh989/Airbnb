<% layout("/layouts/boilerplate") -%>

    <div class="row">
        <div class="col-8 offset-2">



            <h1>Listing Details</h1>
        </div>
        <div class="card col-6 offset-3">
            <img src=" <%=details.image.url %>" class="card-img-top show-img" alt="Listing image">
            <div class="card-body">
                <p class="card-text">
                    <%=details.title %><br>
                    <%=details.description %><br>
                    &#8377;<%=details.price.toLocaleString("en-IN") %><br>
                    <%=details.location %><br>
                    <%=details.country %>
                </p><br>
                <div style="display: flex;">
                    <form action="/listings/<%=details._id%>/edit" method="get">
                        <button class="btn add-btn">Edit</button>
                    </form>&nbsp;&nbsp;&nbsp;
                    <form action="/listings/<%=details._id%>?_method=DELETE" method="post">
                        <button class=" btn btn-dark">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>